<article class="post">
  <div class="title">
    {{post.title}}
  </div>
  <div class="body">
      {{post.post_body}}
  </div>
  <div class="meta">
    by {{post.user.username}} on {{format_date post.created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>


{{#if loggedIn}}
<script src="/Javascript/comment.js"></script>
{{/if}}